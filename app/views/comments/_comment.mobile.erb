<div style="padding-left:15px;padding-bottom:10px;">

	<table>
		<tr>
			<td style="background-color: #FFFFFF">
				<%= comment.body %>	
			</td>
			<td>
				<% if user_signed_in? && comment.user_id == current_user.id %> 
					<%= link_to image_tag( 'delete.jpg', :size => "12x12"), [comment.conversation, comment],
								 :confirm => 'Are you sure?', :method => :delete %>
				<% end %>							
			</td>
		</tr>
		<tr>
			<td style="text-align:right;">
				<span style="font-size:75%"><b><%= comment.nil? or comment.user.nil? ? "Someone" : comment.user.email %></b></span>
			</td>
		</tr>
	</table>

</div>